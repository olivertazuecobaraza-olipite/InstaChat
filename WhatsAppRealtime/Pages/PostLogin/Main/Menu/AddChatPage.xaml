<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WhatsAppRealtime.ViewModel.PostLogin.Main.Menu"
             x:Class="WhatsAppRealtime.Pages.PostLogin.Main.Menu.AddChatPage"
             x:DataType="vm:AddChatPageViewModel"
             Title="Crear un Chat"
             Shell.NavBarHasShadow="True">
    
    
    <VerticalStackLayout Margin="15" Spacing="15">
        <Label Text="Invita a un usuario"/>
        <Entry Text="{Binding Email}" Placeholder="Email"/>
        <Button Text="Crear" FontSize="20" Command="{Binding AddChatCommand}"/>
    </VerticalStackLayout>
</ContentPage>