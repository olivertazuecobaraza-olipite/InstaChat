<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WhatsAppRealtime.ViewModel.PostLogin.Main.Menu"
             x:Class="WhatsAppRealtime.Pages.PostLogin.Main.Menu.AddChatPage"
             x:DataType="vm:AddChatPageViewModel"
             Title="Crear Chat">
    <VerticalStackLayout Margin="15" Spacing="10">
        <Label 
            Text="Email de Usuario"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding EmailReciver}"/>

        <Button Text="Crear Chat" Command="{Binding AddChatCommand}"/>
    </VerticalStackLayout>
</ContentPage>