<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WhatsAppRealtime.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:menu="clr-namespace:WhatsAppRealtime.Pages.PostLogin.Main.Menu"
    xmlns:profile="clr-namespace:WhatsAppRealtime.Pages.PostLogin.Profile"
    Title="WhatsAppRealtime"
    FlyoutBehavior="Flyout">

    <ShellContent
        Title="Chats"
        ContentTemplate="{DataTemplate menu:MenuPage}"
        Route="MenuPage" />
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate profile:ProfilePage}"
        Route="ProfilePage"/>
</Shell>
